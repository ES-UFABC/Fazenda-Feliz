@model List<FazendaFeliz.ApplicationCore.Business.Reclamacao>; 

@{
    ViewData["Title"] = "Reclamações sobre você";
}

<div>
    <h3 class="page-title pb-2">Reclamações sobre você</h3>
    <div class="anuncios-wrapper row">
    @foreach(var reclamacao in Model)
    {
            <section class="col-12 col-lg-4 px-2")>
                <div class="reclamacao">
                    <h5 class = "card-title">@reclamacao.Titulo</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@reclamacao.Nome</h6>
                    <div class="_card-body"> 
                        <div class="info">
                            <div>
                                <p>@reclamacao.Descricao</p>
                            </div>
                        </div>
                        <img src="@reclamacao.Imagem_Base64"/>
                    </div>
                </div>
            </section>
    }
    </div>
</div>

<style>
    .mr-2 {
        margin-right: 10px;
    }
    .reclamacao {
        border-radius: 10px;
        border: solid 2px var(--clr-red);
        padding: 1rem;
        box-shadow: 0 0 5px 3px #0002;
        margin: 1rem 0;
        position: relative;
    }

    .info label{
        font-weight: bold;
    }

    img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 10px;
        margin: auto 0;
    }

    ._card-body {
        display: flex;
        justify-content: space-between;
    }
</style>

